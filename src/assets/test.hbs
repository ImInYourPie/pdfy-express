<html>
	<head>
		<meta charset="-8" />
		<title>Hours Worked Report</title>
		<style>
			table { border-collapse: collapse; width: 100%; } th, td { text-align:
			left; padding: 8px; border: 1px solid #ddd; } th { background-color:
			#f2f2f2; }
		</style>
	</head>
	<body>
		<h1>Hours Worked Report</h1>
		<table>
			<thead>
				<tr>
					<th>User</th>
					<th>Hours Worked</th>
				</tr>
			</thead>
			<tbody>
				{{#each users}}
					<tr>
						<td>{{this.name}}</td>
						<td>{{this.hours}}</td>
					</tr>
				{{/each}}
			</tbody>
		</table>
	</body>
</html>
